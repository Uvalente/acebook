<div class="text-center">
  <% if alert %>
    <div class="alert alert-danger">
      <%= alert %>
    </div>
  <% end %>
  <%= form_with scope: :session, url: sessions_path, local: true, class: 'form-signin' do |form| %>
    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
    <%= form.label :email %>
    <%= form.text_field :email, placeholder: 'email', class: 'form-control' %>
    <br>
    <%= form.label :password %>
    <%= form.password_field :password, placeholder: 'password', class: 'form-control' %>
    <br>
    <%= form.submit 'Sign in', class: 'btn btn-lg btn-primary' %>
  <% end %>
</div>
