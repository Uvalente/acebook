<div class="text-center">
  <% if @user.errors.any? %>
    <div class="alert alert-danger">
      <h2>
        <%= pluralize(@user.errors.count, 'error') %> encountered:
      </h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= form_with scope: :user, url: users_path, local: true do |form| %>
    <h1 class="h3 mb-3 font-weight-normal">Create new user</h1>
    <%= form.label :email %><br>
    <%= form.text_field :email, class: 'form-control' %>
    <br>
    <%= form.label :password %><br>
    <%= form.password_field :password, class: 'form-control' %>
    <br>
    <%= form.submit 'Register', class: 'btn btn-lg btn-primary' %>
  <% end %>
</div>